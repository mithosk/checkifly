{
  "name": "checkifly",
  "version": "0.12.2",
  "description": "Application Monitoring",
  "dependencies": {
    "@sinclair/typebox": "^0.34.9",
    "dotenv": "^16.4.6",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "mongoose": "^8.8.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "src",
    "coverageDirectory": "../coverage/",
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 91,
        "functions": 95,
        "lines": 95
      }
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  },
  "scripts": {
    "docker": "docker compose down -v && docker compose up -d --force-recreate",
    "build": "rimraf dist && tsc --build && tsc-alias",
    "test": "tsc --noEmit && jest --coverage",
    "start": "node dist/app.js",
    "bstart": "rimraf dist && tsc --build && tsc-alias && node dist/app.js"
  }
}
